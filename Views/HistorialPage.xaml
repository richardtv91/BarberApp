<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberApp.Views.HistorialPage"
             Title="HistorialPage">
    <VerticalStackLayout>
        <Label 
     Text="Historial"
     VerticalOptions="Center" 
     HorizontalOptions="Center" />
          <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Text="ID" Grid.Row="0" Grid.Column="0" TextColor="Black"/>
            <Label Text="Servicio" Grid.Row="0" Grid.Column="1"/>
            <Label Text="Precio" Grid.Row="0" Grid.Column="2"/>
            <Label Text="1" Grid.Row="1" Grid.Column="0"/>
            <Label Text="Corte Hombre" Grid.Row="1" Grid.Column="1"/>
            <Label Text="$2" Grid.Row="1" Grid.Column="2"/>
            <Button Text="Mes" BackgroundColor="Green" Grid.Row="2" Grid.Column="0"></Button>
            <Button Text="Dia" BackgroundColor="Green" Grid.Row="2" Grid.Column="1"></Button>

        </Grid>

        
    </VerticalStackLayout>
</ContentPage>